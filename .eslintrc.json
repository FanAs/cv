{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "@typescript-eslint/restrict-plus-operands": "off",
    "semi": [1, "always"],
    "@typescript-eslint/semi": [1, "always"],
    "react/jsx-indent": [2, 2]
  }
}
